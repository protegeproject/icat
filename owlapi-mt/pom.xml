<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>owlapi</groupId>
    <artifactId>owlapi-parent</artifactId>
    <packaging>pom</packaging>
    <version>3.0.0</version>
    <name>OWLAPI</name>
    <url>http://sourceforge.net/projects/owlapi</url>

    <modules>
        <module>api</module>
        <module>apibinding</module>
        <module>debugging</module>
        <module>dlsyntax</module>
        <module>examples</module>
        <module>functionalparser</module>
        <module>functionalrenderer</module>
        <module>impl</module>
        <module>krssparser</module>
        <module>krssrenderer</module>
        <module>latexrenderer</module>
        <module>mansyntaxrenderer</module>
        <module>mansyntaxparser</module>
        <module>oboparser</module>
        <module>oborenderer</module>
        <module>owlxmlparser</module>
        <module>owlxmlrenderer</module>
        <module>rdfapi</module>
        <module>rdfxmlparser</module>
        <module>rdfxmlrenderer</module>
        <module>reasoner</module>
        <module>util</module>
        <module>tutorial</module>
        <module>turtlerenderer</module>
        <module>turtleparser</module>
        <module>metrics</module>
        <module>change</module>
        <module>owlexpression</module>
    </modules>


    <licenses>
        <license>
            <name>GNU Lesser General Public License</name>
            <url>http://www.gnu.org/copyleft/lesser.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <repositories>
        <repository>
            <id>owlapirep</id>
            <name>OWLAPI Maven Repository</name>
            <url>http://owl.cs.manchester.ac.uk/maven/repos</url>
        </repository>
    </repositories>
    

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <aggregate>true</aggregate>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-1</version>
                <configuration>
                    <descriptors>
                        <descriptor>owlapi-bin.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <aggregate>true</aggregate>
                </configuration>
            </plugin>

            <finalName>owlapi-${project.version}</finalName>

        </plugins>
    </build>

    <!-- Generate one javadoc for everything -->
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <aggregate>true</aggregate>
                </configuration>
            </plugin>
        </plugins>
    </reporting>

    <scm>
        <connection>scm:svn:https://owlapi.svn.sourceforge.net/svnroot/owlapi/owl1_1/trunk/</connection>
        <developerConnection>scm:svn:https://owlapi.svn.sourceforge.net/svnroot/owlapi/owl1_1/trunk/</developerConnection>
        <url>https://owlapi.svn.sourceforge.net/svnroot/owlapi/owl1_1/trunk/</url>
    </scm>

</project>